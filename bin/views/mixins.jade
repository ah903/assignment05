////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Mixin for navigation Bar following Bootstrap theme
// Based on Original code from
// http://webdesign.tutsplus.com/tutorials/baking-bootstrap-snippets-with-jade--cms-22798
////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// NavBar
////////////////////////////////////////////////////////////////////////////////////////////////////////////////
mixin navbar(name, href, id, style)
    - var style = (typeof style === "undefined") ? "default" : style
    nav(role="navigation", class=["navbar", "navbar-" + style])
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href=href)= name
 
        .collapse.navbar-collapse( id=id )
            ul.nav.navbar-nav
                block
////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Dropdown
///////////////////////////////////////////////////////////////////////////////////////////////////////////////
mixin navbar_dropdown(href, controller, active)
    li(class=["dropdown", active])&attributes(attributes)
        a.dropdown-toggle(href=href, data-toggle="dropdown", role="button", aria-expanded="false")=attributes.label
            span.caret
        ul.dropdown-menu( role="menu" )
            block

////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Navbar Item Link or Dropdown
////////////////////////////////////////////////////////////////////////////////////////////////////////////////
mixin navbar_item(href)
    li&attributes(attributes): a( href=href )
        block


////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Menu Divider
////////////////////////////////////////////////////////////////////////////////////////////////////////////////
mixin navbar_item_divider
    li.divider




